<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#34495e"
    tools:context=".Arithmaticker"><![CDATA[

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/button"
        android:layout_marginTop="131dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    ]]>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arith_timer"
        android:text="00:00"
        android:textSize="30dp"
        android:textColor="#ecf0f1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:textSize="40dp"
        android:id="@+id/button5"
        android:onClick="buttonTwo"
        android:layout_above="@+id/button7"
        android:height="75dp"
        android:width="150dp"
        android:layout_alignStart="@+id/button7"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="40dp"
        android:id="@+id/button6"
        android:onClick="buttonThree"
        android:height="75dp"
        android:width="150dp"
        android:layout_alignTop="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70"
        android:textSize="40dp"
        android:id="@+id/button7"
        android:onClick="buttonFour"
        android:height="75dp"
        android:width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:textSize="40dp"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentStart="true"
        android:onClick="buttonOne"
        android:height="75dp"
        android:width="150dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/bigNum"
        android:textSize="80dp"
        android:textColor="#ecf0f1"
        android:layout_below="@+id/arith_timer"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigNum"
        android:text="-      7"
        android:textSize="70dp"
        android:textColor="#ecf0f1"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigNum"
        android:text="________"
        android:textColor="#ecf0f1"
        android:textSize="60dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textSize="30dp"
        android:textColor="#ecf0f1"
        android:id="@+id/triesCounter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" /><![CDATA[



    Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


]]>
</RelativeLayout>
